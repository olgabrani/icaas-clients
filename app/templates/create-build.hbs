<section class="new-build" id="new-build">

    {{#slide-button areaID="creation-form" btnID="create-header" containerID="new-build" tagName="h2" id="create-header" isOpen=true }}
        {{t "buttons.toggle_create_form"}}
    {{/slide-button}}

    <div id="creation-form">
        
    <form>
        <label for="src">
            <span class="mendatory-sign">*</span>
            {{t "labels.url"}}
            <span class="css-tooltip css-tooltip-se"  aria-label={{t "help_texts.url"}}>
                <i class="info-sign fa fa-info-circle"></i>
            </span>

            {{#error-msg err=errorCreation.src action="clearError"}}
                {{input type="url" value=src id="src"}}
                {{#if warning_src}}
                    <em class="warning">{{t "help_texts.warning_src"}}</em>
                {{/if}}
            {{/error-msg}}
        </label>
        <label for="name">
            <span class="mendatory-sign">*</span>
            {{t "labels.name"}}
            <span class="css-tooltip css-tooltip-se"  aria-label={{t "help_texts.build_name"}}>
                <i class="info-sign fa fa-info-circle"></i>
            </span>
        </label>
        {{#error-msg err=errorCreation.name action="clearError"}}
            {{input type="text" value=name id="name"}}
        {{/error-msg}}
        <label for="description">
            {{t "labels.descr"}}
        </label>
        {{textarea value=description id="description" maxlength=255}}
        <label for="image_name">
            {{t "labels.file"}}
        </label>
        {{input type="text" value=image_name id="image_name"}}
        <div class="dropdown">
            <label>
                {{t "labels.project"}}
                <span class="css-tooltip css-tooltip-se"  aria-label={{t "help_texts.project"}}>
                <i class="info-sign fa fa-info-circle"></i>
            </span>
            </label>
            {{#x-select value=selectedProject}}
                {{#each projects as |p|}}
                    {{#x-option value=p}}{{p.human_name}}{{/x-option}}
                {{/each}}
            {{/x-select}}
        </div>
        <div class="dropdown right">
            <label>
                {{t "labels.container"}}
                <span class="css-tooltip css-tooltip-sw"  aria-label={{t "help_texts.container"}}>
                <i class="info-sign fa fa-info-circle"></i>
            </span>
            </label>
            {{#x-select value=selectedContainer}}
                {{#each containers as |c|}}
                    {{#x-option value=c}}{{c.name}}{{/x-option}}
                {{/each}}
            {{/x-select}}
        </div>
        <label for="public">
            {{t "labels.public"}}
            <span class="css-tooltip css-tooltip-se"  aria-label={{t "help_texts.public"}}>
                <i class="info-sign fa fa-info-circle"></i>
            </span>
            {{input type="checkbox" id="public" checked=isPublic}}
        </label>
    </form>
    {{#if loading}}
        <div class="text-center loader">{{fa-icon "fa-refresh" spin=true}}</div>
    {{/if}}
    {{error-msg err=errorCreation.common}}
    {{#if errorMsg}}
        <div class="alert-box alert">
            <a {{action 'hideErrors'}} title="Hide errors" class="close">{{fa-icon "fa-close"}}</a>
            {{errorMsg}}
        </div>
    {{/if}}
<div class="buttons">
    <button type="submit" class="small success" {{action 'initCreateBuild'}}>{{t "buttons.build"}}</button>
</div>
    </div>
</section>
